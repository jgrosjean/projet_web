{% extends "::baseAdmin.html.twig" %}

{% block body %}

		<div class="section section-breadcrumbs">
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                <h1>Licences</h1>
              </div>
            </div>
          </div>
        </div>


		<div class="section">
	        <div class="container">
			<h1>Gèrer les licences</h1>
	        	<a href="{{ path('admin_creerFormLicence')}}"> créer un nouveau type de licence</a><br>
				<a href="{{ path('admin_licencesNonVisibles')}}"> gérer les licences non visibles</a><br>
				<a href="{{ path('admin_gererUploadLicence')}}"> gérer les pdf liés aux licences</a>
	        </div>
	    </div>
	
		<!-- Pricing Table -->
		<div class="section">
	    	<div class="container">
	    		<h2>Licences Adultes visibles</h2>
				<p>Sans réduction</p>
	        	<div class="row">
	        		<!-- Pricing Plans Wrapper -->

						<div class="pricing-wrapper col-md-12">
							{% for licenceSenior in licencesSenior %}
								<div class="pricing-plan">
									<h2 class="pricing-plan-title">{{licenceSenior.intitule}}</h2>
									<p class="pricing-plan-price">{{licenceSenior.prix}}€<span></span></p>
										<ul class="pricing-plan-features">
											<li><strong>{{licenceSenior.description1}}</strong> </li>
											<li><strong>{{licenceSenior.description2}}</strong> </li>
											<li><strong>{{licenceSenior.description3}}</strong> </li>
										</ul>
									<a href="{{ path('admin_modifierLicence', {'id':licenceSenior.id}) }}" class="btn">Modifier</a><br>
									<a href="{{ path('admin_licenceInfo', {'id':licenceSenior.id}) }}">Plus d'infos</a><br><br>
								</div>
					    	{%endfor%}
						</div>

							<br>
							<p>Avec réduction</p>
