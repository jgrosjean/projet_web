{% extends "::baseNoLog.html.twig" %}

{% block body %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}


<div class="section">
	    	<div class="container">
				<div class="row">
					<div class="col-sm-5">
						<div class="basic-login">

							<form action="{{ path("fos_user_security_check") }}" method="post">
							
								<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
								
								<div class="form-group">
									<label for="username"><i class="icon-user"></i><B>Identifiant</B></label>
									<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
								</div>
								
								<div class="form-group">
									<label for="password"><i class="icon-user"><B>Mot de passe</B></label>
									<input class="form-control" type="password" id="password" name="_password" required="required" />
								</div>
								
								<div class="form-group">
									<label class="checkbox">
										<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
										<label for="remember_me">Remember me</label>
									</label>
									<a href="{{ path('fos_user_resetting_request')}}" class="forgot-password">Mot de passe oublié?</a>
									<input type="submit" id="_submit" name="_submit" class="btn pull-right" value="Connexion" />
									<div class="clearfix"></div>
								</div>
															
							</form>
				</div>
			</div>
			<div class="col-sm-7 social-login">
						<div class="clearfix"></div>
							<div class="not-member">
							
							<p><Br>Pas encore membre ? <a href="{{ path('fos_user_registration_register')}}">Se créer un compte ICI</a></p>
							</div>
						</div>
						<div class="col-sm-7 social-login">
						<div class="clearfix"></div>
							<div class="not-member">
							<p> </p>
							</div>
						</div>
			</div>
			</div>
			
</div>

{% endblock body %}
